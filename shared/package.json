{
  "name": "shared",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "engines": {
    "node": "18.x.x",
    "npm": "9.x.x"
  },
  "imports": {
    "#*": "./src/*"
  },
  "exports": {
    "./build/*": {
      "import": "./build/esm/*",
      "require": "./build/cjs/*",
      "default": "./build/esm/*"
    }
  },
  "scripts": {
    "lint:type": "npx tsc --noEmit",
    "lint:js": "npx eslint \"src/**/*.ts\"",
    "build:copy": "cp -r package.json build/esm && cp -r package.json build/cjs",
    "build": "tsc -b ./tsconfig.cjs.json ./tsconfig.esm.json && tsc-alias -p ./tsconfig.cjs.json && npm run build:copy"
  },
  "dependencies": {
    "joi": "17.9.2",
    "tsc-alias": "1.8.7"
  }
}
