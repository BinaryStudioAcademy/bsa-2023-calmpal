{
  "name": "shared",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "node": "18.x.x",
    "npm": "9.x.x"
  },
  "imports": {
    "#*": "./src/*"
  },
  "exports": {
    "./build/": {
      "import": "./build/esm/",
      "require": "./build/cjs/",
      "default": "./build/esm/"
    }
  },
  "scripts": {
    "lint:type": "npx tsc --noEmit",
    "lint:js": "npx eslint \"src/**/*.ts\"",
    "build:ts": "tsc -b ./tsconfig.cjs.json ./tsconfig.esm.json",
    "build": "npm run build:ts"
  },
  "dependencies": {
    "joi": "17.9.2"
  }
}
